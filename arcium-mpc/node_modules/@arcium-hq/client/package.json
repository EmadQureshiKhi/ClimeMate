{
  "name": "@arcium-hq/client",
  "version": "0.3.0",
  "description": "Client SDK for interacting with encrypted Solana programs",
  "author": "Arcium",
  "license": "GPL-3.0-only",
  "main": "build/index.mjs",
  "scripts": {
    "test": "mocha test/**/*.ts --exit",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"test/**/*.ts\" --fix",
    "lint:clean": "rm -rf dist/ && rm -rf build/",
    "compile": "yarn bundle:cjs && yarn bundle:esm && yarn bundle:dts",
    "bundle:cjs": "node ../../node_modules/rollup/dist/bin/rollup --config config/rollup.config.cjs.js",
    "bundle:esm": "node ../../node_modules/rollup/dist/bin/rollup --config config/rollup.config.esm.js",
    "bundle:dts": "node ../../node_modules/rollup/dist/bin/rollup --config config/rollup.config.dts.js",
    "test-single": "mocha $1 --exit"
  },
  "type": "module",
  "module": "build/index.mjs",
  "types": "build/index.d.ts",
  "files": [
    "build/index.cjs",
    "build/index.mjs",
    "build/index.d.ts"
  ],
  "exports": [
    {
      "types": "./build/index.d.ts",
      "import": "./build/index.mjs",
      "require": "./build/index.cjs"
    }
  ],
  "engines": {
    "node": ">=20.18.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arcium-hq/arcium-tooling.git"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/bn.js": "^5.1.6",
    "@types/chai": "^5.0.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.10.2",
    "@types/snarkjs": "^0.7.8",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "chai": "^5.1.2",
    "eslint": "^9.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "mocha": "^10.8.2",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.15.0"
  },
  "dependencies": {
    "@coral-xyz/anchor": "0.31",
    "@noble/curves": "^1.9.5",
    "@noble/hashes": "^1.7.1",
    "@solana/web3.js": "^1.95.4"
  },
  "keywords": [
    "Cryptography",
    "Privacy",
    "Multiparty Computation",
    "Arcium",
    "Blockchain",
    "Solana",
    "Confidential Computing",
    "MPC"
  ]
}
